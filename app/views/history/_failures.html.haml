%div#failures
  .block
    .block_head
      .bheadl
      .bheadr
      %h2{:style => "color: red;"} Failed Queue
      %span.ajax-loading

    / .block_head ends
    .block_content
      %form{:action => "", :method => "post"}
        %table{:cellpadding => "0", :cellspacing => "0", :width => "100%", :id => "users"}
          %tr
            %th Serial
            %th Job ID
            %th Folder
            %th Reason
            %td &nbsp;
          - @failures.each do |content|
            = render :partial => 'history/failure', :locals => {:content => content }
    
    / .block_content ends
    .bendl
    .bendr