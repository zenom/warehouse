%div#archived
  .block
    .block_head
      .bheadl
      .bheadr
      %h2 Archived
      %span.ajax-loading
      %ul
        %li
          %a{:href => "#"} Search: &nbsp;
          %form{:method => "get", :id => "search_archived"}
            %input.text{:type => "text", :name => "search"}/
    / .block_head ends
    .block_content
      %form{:action => "", :method => "post"}
        %table{:cellpadding => "0", :cellspacing => "0", :width => "100%", :id => "users"}
          %tr
            %th Serial
            %th Folder
            %th Title
            %th Burns
            %th Archived
            %td &nbsp;
          - @archived.each do |content|
            = render :partial => 'history/archived_row', :locals => {:content => content }

        / pagination
        = will_paginate @archived, :params => {:controller => 'history', :action => 'load_archived'}
    
    / .block_content ends
    .bendl
    .bendr