%tr{:id => "content_#{content.id}"}
  %td.serial= content.id
  %td.jobid= content.last_burn.nil? ? "Unknown" : content.last_burn.job_id
  %td.folder= content.destination_folder
  %td.title= content.cadre_title
  %td.status= content.status 
  %td.functions
    = link_to "Cancel", history_cancel_path(content), :remote => true, :confirm => "Are you sure you with to cancel this job?" if content.current_state != :started
    = " | "
    = link_to "Update", history_update_status_path(content), :remote => true