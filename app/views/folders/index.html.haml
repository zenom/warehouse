%div#pending
  .block
    .block_head
      .bheadl
      .bheadr
      %h2 Watch Folders
      %ul
        %li
          = link_to "Add New Folder", new_folder_path
      %span.ajax-loading

    / .block_head ends
    .block_content
      %form{:action => "", :method => "post"}
        %table{:cellpadding => "0", :cellspacing => "0", :width => "100%", :id => "users"}
          %tr
            %th Folder
            %th Media Type
            %th Content Type
            %th Title
            %td &nbsp;
          = render :partial => "folders/folder", :collection => @folders
          

        / pagination
        /= will_paginate @pending
    
    / .block_content ends
    .bendl
    .bendr